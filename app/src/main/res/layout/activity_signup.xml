<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sp_black"
    tools:context=".SignUpActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:paddingLeft="25dp"
        android:paddingTop="50dp"
        android:text="Let's get started"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:text="Please fill the input below to register"
        android:textColor="@android:color/darker_gray" />


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_profile"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_mail"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/createEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_phone"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="Phone"
            android:inputType="textPhonetic"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_lock"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/createPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_lock"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <Button
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="CREATE"
        app:backgroundTint="@color/success" />

    <TextView
        android:id="@+id/loginTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="55dp"
        android:text="Already have an account? Login here"
        android:textColor="@android:color/darker_gray" />


</LinearLayout>