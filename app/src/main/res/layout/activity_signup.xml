<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sp_black"
    tools:context=".SignUpActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:paddingLeft="25dp"
        android:paddingTop="50dp"
        android:text="@string/let_s_get_started"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:text="@string/please_fill_the_input_below_to_register"
        android:textColor="@android:color/darker_gray" />


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_profile"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_mail"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/createEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_phone"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="@string/phone"
            android:inputType="textPhonetic|phone"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_lock"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/createAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="About"
            android:inputType="textShortMessage|textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        app:mtf_image="@drawable/ic_lock"
        app:mtf_labelColor="#666">

        <EditText
            android:id="@+id/createPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="@color/dark_orange"
            android:textColorLink="@color/sp_black"
            android:textCursorDrawable="@drawable/ic_edit"
            android:textSize="15sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <Button
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/create"
        app:backgroundTint="@color/success" />

    <TextView
        android:id="@+id/loginTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="55dp"
        android:text="@string/already_have_an_account_login_here"
        android:textColor="@android:color/darker_gray" />


</LinearLayout>